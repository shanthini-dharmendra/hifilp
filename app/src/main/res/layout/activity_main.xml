<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".MainActivity">

    <!-- Title: YRS Members -->
    <TextView
        android:id="@+id/teamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YRS Members"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Team Member 1: Shanthini (Image Left, Name Right) -->
    <ImageView
        android:id="@+id/teamMember1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/shanu"
        android:contentDescription="Shanthini D"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/teamTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/teamMember1Name"
        app:layout_constraintBottom_toTopOf="@id/teamMember2" />

    <TextView
        android:id="@+id/teamMember1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shanthini D"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/teamMember1"
        app:layout_constraintStart_toEndOf="@id/teamMember1"
        app:layout_constraintBottom_toBottomOf="@id/teamMember1" />

    <!-- Team Member 2: Yasvitha (Image Right, Name Left in Middle) -->
    <TextView
        android:id="@+id/teamMember2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yasvitha R S"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/teamMember2"
        app:layout_constraintEnd_toStartOf="@id/teamMember2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/teamMember2" />

    <ImageView
        android:id="@+id/teamMember2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/yash"
        android:contentDescription="Yasvitha R S"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/teamMember1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/teamMember3" />

    <!-- Team Member 3: Rakesh (Image Left, Name Right) -->
    <ImageView
        android:id="@+id/teamMember3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/rakesh"
        android:contentDescription="Rakesh S"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/teamMember2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/teamMember3Name"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/teamMember3Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rakesh S"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/teamMember3"
        app:layout_constraintStart_toEndOf="@id/teamMember3"
        app:layout_constraintBottom_toBottomOf="@id/teamMember3" />

</androidx.constraintlayout.widget.ConstraintLayout>
