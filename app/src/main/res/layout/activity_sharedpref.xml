<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Outer LinearLayout for vertical alignment -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#F5F5F5"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mindset Input -->
        <TextView
            android:id="@+id/tvLastMindset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Mindset: "
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/etMindset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your mindset (happy, sad, etc.)"
            android:padding="12dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Save Mindset Button -->
        <Button
            android:id="@+id/btnSaveMindset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Mindset"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6200EE"
            android:textColor="@android:color/white" />

        <!-- Favorite Song/Movie Input -->
        <EditText
            android:id="@+id/etFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter favorite song/movie"
            android:padding="12dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type (song/movie)"
            android:padding="12dp"
            android:backgroundTint="#D1C4E9"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Add to Favorites Button -->
        <Button
            android:id="@+id/btnAddFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Favorites"
            android:padding="10dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#03A9F4"
            android:textColor="@android:color/white" />

        <!-- Show Favorites Button -->
        <Button
            android:id="@+id/btnShowFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Favorites"
            android:padding="10dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white" />

        <!-- TextView to display results -->
        <TextView
            android:id="@+id/tvFavorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorites will be displayed here"
            android:textSize="18sp"
            android:textColor="#000000"
            android:paddingTop="16dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
